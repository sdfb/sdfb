<h2>Relationship Types</h2>
<% if ! @rel_types.empty? %>
	<div class = "well">
		<table class="table table-condensed">
		    <tr>
		    <th>SDFB Relationship Type ID</th>
		    <th>Relationship Type Name</th>
		    <th>Inverse of Relationship Type</th>
		    <th></th>
		    </tr>

		    <% @rel_types.each do |relationship_type| %>
		      <tr>
		        <td><%= link_to relationship_type.id, relationship_type %></td>
		        <td><%= relationship_type.name %></td>
		        <% if ! relationship_type.relationship_type_inverse.blank? %>
		            <td><%= link_to RelationshipType.find(relationship_type.relationship_type_inverse).name, relationship_type_path(relationship_type.relationship_type_inverse) %></td>
		        <% else %>
		            <td></td>
		        <% end %>
		        <td>
		        <%= link_to 'Edit', edit_relationship_type_path(relationship_type), :class => 'btn btn-mini' %></td>
		      </tr>
		    <% end %>
		</table>
		<%= will_paginate @rel_types, :param_name => 'rel_types_page', :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
	</div>
 <% else %>
	<div class = "well">
	You have not contributed any relationship types.
	</div>
<% end %>