<h2>Unapproved Relationship Type/Category Assignments</h2>

<!-- vital information for curator approval process commented out by [IS16] -->
<!-- probably an error, as they assumed this meant something other than it did - investigate!!! -->

<% if ! @unapproved_rel_type_cat_assigns.empty? %>
  <div class = "well">
    <table class="table table-condensed">
      <thead>
        <tr>
          <th>SDFB Rel. Type/Category Assignment ID:</th>
          <th>Relationship Type</th>
<!--           <th>Relationship Category</th> -->
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @unapproved_rel_type_cat_assigns.each do |rel_cat_assign| %>
          <tr>
            <td><%= link_to rel_cat_assign.id, rel_cat_assign %></td>
            <td><%= link_to RelationshipType.find(rel_cat_assign.relationship_type_id).name, relationship_type_path(rel_cat_assign.relationship_type_id) %></td>
<!--             <td><%= link_to RelationshipCategory.find(rel_cat_assign.relationship_category_id).name, relationship_category_path(rel_cat_assign.relationship_category_id) %></td> -->
            <td>
              <% if can? :update, rel_cat_assign %>
                <%= link_to t('.edit', :default => t("helpers.links.edit")),
                                edit_rel_cat_assign_path(rel_cat_assign), :class => 'btn btn-mini' %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= will_paginate @unapproved_rel_type_cat_assigns, :param_name => 'unapproved_rel_type_cat_assigns_page', :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
  </div>
<% else %>
  <div class = "well">
    No unapproved relationship type/category assignments exist.
  </div>
<% end %>