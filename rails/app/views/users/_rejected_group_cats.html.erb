<h2>Rejected Group Categories</h2>
<% if ! @rejected_group_cats.empty? %>
  <div class = "well">
    <table class="table table-condensed">
      <thead>
        <tr>
          <th>SDFB Group Category ID</th>
          <th>Group Category Name</th>
          <th>Description</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @rejected_group_cats.each do |group_category| %>
          <tr>
            <td><%= link_to group_category.id, group_category %></td>
            <td><%= group_category.name %></td>
            <td><%= group_category.description %></td>
            <td>
              <% if can? :update, group_category %>
                <%= link_to t('.edit', :default => t("helpers.links.edit")),
                                edit_group_category_path(group_category), :class => 'btn btn-mini' %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate @rejected_group_cats, :param_name => 'rejected_group_cats_page', :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
  </div>
<% else %>
  <div class = "well">
    No rejected group categories exist.
  </div>
<% end %>