<div class="row">
	<div class="span3">
	</div>
	<div class="span6">
		<div class = "container-box">
			<h1>Log in</h1>

			<%= form_tag sessions_path do %>
			  <p>
			    <%= label_tag :email %><br />
			    <%= text_field_tag :email, params[:email] %>
			  </p>
			  <p>
			    <%= label_tag :password %><br />
			    <%= password_field_tag :password %>
			  </p>
			  <p class="button"><%= submit_tag %></p>
			<% end %>
		</div>
    </div>
</div>