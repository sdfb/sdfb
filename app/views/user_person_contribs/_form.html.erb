<%= simple_form_for @user_person_contrib, :html => { :class => 'form-horizontal' } do |f| %>
  <% if @user_person_contrib.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user_person_contrib.errors.count, "error") %> prohibited this user_person_contrib from being saved:</h2>

      <ul>
      <% @user_person_contrib.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <% if ! @person_id.blank? %>
    <%= f.input :person_id, :collection =>@personOptions.collect{ |p| [p.first_name + " " + p.last_name, p.id] }, label: "Person", prompt: "Select", selected: @person_id %>
  <% else %>
    <%= f.input :person_id, :collection =>@personOptions.collect{ |p| [p.first_name + " " + p.last_name, p.id] }, label: "Person", prompt: "Select" %>
  <% end %>
  <%= f.hidden_field :created_by, :value => current_user.id %>
  <%= f.input :annotation %>
  <%= f.input :bibliography %>
  <% if current_user.user_type == "Admin" %>
    <%= f.input :is_approved %>
    <%= f.hidden_field :approved_by, :value => current_user.id %>
  <% end %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                user_person_contribs_path, :class => 'btn' %>
  </div>
<% end %>

