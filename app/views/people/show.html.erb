<%- model_class = Person -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:original_id) %>:</strong></dt>
  <dd><%= @person.original_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:first_name) %>:</strong></dt>
  <dd><%= @person.first_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last_name) %>:</strong></dt>
  <dd><%= @person.last_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:created_by) %>:</strong></dt>
  <dd><%= 
  if @person.created_by.nil?
    'ODNB'
  else
    @person.created_by
  end
  %></dd>
  <dt><strong><%= model_class.human_attribute_name(:birth_year) %>:</strong></dt>
  <dd><%= @person.birth_year %></dd>
  <dt><strong><%= model_class.human_attribute_name(:death_year) %>:</strong></dt>
  <dd><%= @person.death_year %></dd>
  <dt><strong><%= model_class.human_attribute_name(:historical_significance) %>:</strong></dt>
  <dd><%= @person.historical_significance %></dd>
  <dt><strong><%= model_class.human_attribute_name(:is_approved) %>:</strong></dt>
  <dd><%= @person.is_approved.to_s %></dd>
  <dt><strong>Relationship Summary:</strong></dt>
  <dd><%= @person.rel_sum %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              people_path, :class => 'btn'  %>
  <% if can? :update, @people %> 
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_person_path(@person), :class => 'btn' %>
  <% end %>
  <% if can? :destroy, @people %> 
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              person_path(@person),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
  <% end %>
</div>
