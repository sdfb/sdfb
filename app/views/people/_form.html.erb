<%= simple_form_for @person, :html => { :class => 'form-horizontal' } do |f| %>
  <% if @person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
      <% @person.errors.full_messages.each do |msg| %>
        <br>
          <li>- <%= msg %></li>
        <br>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.input :display_name, label: "Display Name" %>
  <%= f.input :prefix %>
  <%= f.input :first_name, label: "First Name" %>
  <%= f.input :last_name, label: "Last Name" %>
  <%= f.input :suffix %>
  <%= f.input :title %>
  <%= f.hidden_field :created_by, :value => current_user.id %>
  <%= f.input :gender, :collection =>["female", "male","unknown"], label: "Gender", prompt: "Select" %>
  <%= f.input :odnb_id, label: "ODNB ID", as: :string %>
  <%= f.input :birth_year_type, :collection =>["BF", "AF","IN","CA","BF/IN","AF/IN"], label: "Birth Year Type", prompt: "Select", hint: " BF = Before, AF = After, IN = In, CA = Circa, BF/IN = Before or In, AF/IN = After or In" %>
  <%= f.input :ext_birth_year, label: "Birth Year" %>
  <%= f.input :alt_birth_year, label: "Alternative Birth Year" %>
  <%= f.input :death_year_type, :collection =>["BF", "AF","IN","CA","BF/IN","AF/IN"], label: "Death Year Type", prompt: "Select", hint: " BF = Before, AF = After, IN = In, CA = Circa, BF/IN = Before or In, AF/IN = After or In" %>
  <%= f.input :ext_death_year, label: "Death Year" %>
  <%= f.input :alt_death_year, label: "Alternative Death Year" %>
  <%= f.input :search_names_all, label: "All Historical Aliases" %>
  <%= f.input :historical_significance, input_html: { rows:"5" }, label: "Historical Significance" %>
  <%= f.input :justification, input_html: { rows:"5" }, label: "Justification for Person Creation" %>
  <% if (current_user.user_type == "Admin") || (current_user.user_type == "Curator") %>
    <%= f.input :is_approved %>
    <%= f.input :is_active %>
    <%= f.input :is_rejected %>
    <%= f.hidden_field :approved_by, :value => current_user.id %>
    <%= f.hidden_field :approved_on, :value => Time.now %>
  <% end %>
  <div class="form-actions">
    Please note that your submission will not appear on SDFB <br>
    until it is reviewed by the SDFB curator or administrator. <br>
    <%= f.button :submit, :class => 'btn btn-primary', :value => "Add Person to SDFB" %>
  </div>
<% end %>