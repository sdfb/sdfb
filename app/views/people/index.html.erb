<h2>All People</h2>
<%= render 'person_search_box' %>
<br>
<%= link_to 'New Person', new_person_path, :class => 'btn btn-primary' %>
<br>
  <table class="table table-condensed">
    <thead>
      <tr>
        <th>Person id</th>
        <th>ODNB id</th>
        <th>Prefix</th>
        <th>First name</th>
        <th>Last name</th>
        <th>Suffix</th>
        <th>Title</th>
        <th>All known identities</th>
        <% if current_user != nil %>
            <% if (current_user.user_type == "Admin")  %>
                <th>Created by</th>
            <% end %>
        <% end %>  
        <th>Birth Year Type</th>
        <th>Extant Birth Year</th>
        <th>Alternate Birth Year</th>
        <th>Death Year Type</th>
        <th>Extant Death Year</th>
        <th>Alternate Death Year</th>
        <th>Historical significance</th>
        <th>Approved by</th>
        <th>Approved on</th>
        <th>Created at</th>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
    </thead>
    <tbody>
      <% @people_approved.each do |person| %>
        <tr>
          <td><%= person.id %></td>
          <td><%= person.odnb_id %></td>
          <td><%= person.prefix %></td>
          <td><%= person.first_name %></td>
          <td><%= person.last_name %></td>
          <td><%= person.suffix %></td>
          <td><%= person.title %></td>
          <td><%= person.search_names_all %></td>
          <td><%= link_to User.find(person.created_by).username,  user_path(person.created_by) %></td>
          <td><%= person.birth_year_type %></td>
          <td><%= person.ext_birth_year %></td>
          <td><%= person.alt_birth_year %></td>
          <td><%= person.death_year_type %></td>
          <td><%= person.ext_death_year %></td>
          <td><%= person.alt_death_year %></td>
          <td><%= person.historical_significance %></td>
          <td><%= link_to User.find(person.approved_by).username,  user_path(person.approved_by) %></td>
          <td><%= person.approved_on %></td>
          <td><%= person.created_at %></td>
          <td>
            <% if can? :show, person %>
                <%= link_to 'Show', person %>
            <% end %>
            <% if can? :update, person %>      
                <%= link_to t('.edit', :default => t("helpers.links.edit")),
                            edit_person_path(person), :class => 'btn btn-mini' %>
            <% end %>
            <% if can? :destroy, person %>   
                <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                            person_path(person),
                            :method => :delete,
                            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                            :class => 'btn btn-mini btn-danger' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @people_approved, :param_name => 'people_approved_page', :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
</div>