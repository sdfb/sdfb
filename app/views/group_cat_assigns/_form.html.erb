<%= simple_form_for @group_cat_assign, :html => { :class => 'form-horizontal' } do |f| %>
  <% if @group_cat_assign.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@group_cat_assign.errors.count, "error") %> prohibited this group_cat_assign from being saved:</h2>

      <ul>
      <% @group_cat_assign.errors.full_messages.each do |msg| %>
        <br>
          <li>- <%= msg %></li>
        <br>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :created_by, :value => current_user.id %>
  <% if ! @group_id.blank? %>
    <%= f.input :group_id, :collection =>@groupOptions.collect{ |g| [g.name, g.id] }, label: "Group", prompt: "Select", selected: @group_id %>
  <% elsif ! @group_cat_assign.group_id.blank? %>
    <%= f.input :group_id, :collection =>@groupOptions.collect{ |g| [g.name, g.id] }, label: "Group", prompt: "Select", selected: @group_cat_assign.group_id %>
  <% else %>
    <%= f.input :group_id, :collection =>@groupOptions.collect{ |g| [g.name, g.id] }, label: "Group", prompt: "Select" %>
  <% end %>
  <% if ! @group_cat_id.blank? %>
    <%= f.input :group_category_id, :collection =>@groupCatOptions.collect{ |g| [g.name, g.id] }, label: "Group Category", prompt: "Select", selected: @group_cat_id %>
  <% elsif ! @group_cat_assign.group_category_id.blank? %>
    <%= f.input :group_category_id, :collection =>@groupCatOptions.collect{ |g| [g.name, g.id] }, label: "Group Category", prompt: "Select", selected: @group_cat_assign.group_category_id %>
  <% else %>
    <%= f.input :group_category_id, :collection =>@groupCatOptions.collect{ |g| [g.name, g.id] }, label: "Group Category", prompt: "Select" %>
  <% end %>
  <% if current_user.user_type == "Admin" %>
    <%= f.input :is_approved %>
    <%= f.input :is_active %>
    <%= f.input :is_rejected %>
    <%= f.hidden_field :approved_by, :value => current_user.id %>
    <%= f.hidden_field :approved_on, :value => Time.now %>
  <% end %>
  <div class="form-actions">
    Please note that your submission will not appear on SDFB <br>
    until it is reviewed by the SDFB curator or administrator. <br>
    <%= f.button :submit, :class => 'btn btn-primary', :value => "Assign Group to Category" %>
  </div>
<% end %>