<%= simple_form_for @group_cat_assign, :html => { :class => 'form-horizontal' } do |f| %>
  <% if @group_cat_assign.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@group_cat_assign.errors.count, "error") %> prohibited this group_cat_assign from being saved:</h2>

      <ul>
      <% @group_cat_assign.errors.full_messages.each do |msg| %>
        <br>
          <li>- <%= msg %></li>
        <br>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.label :group_id %>
  <%= Group.find(@group_cat_assign.group_id).name %>
  <%= f.label :group_category_id %>
  <%= GroupCategory.find(@group_cat_assign.group_category_id).name %>
  <% if current_user.user_type == "Admin" %>
    <%= f.input :is_approved %>
    <%= f.input :is_active %>
    <% if @is_approved == false %>
      <%= f.input :is_rejected %>
      <%= f.hidden_field :approved_by, :value => current_user.id %>
      <%= f.hidden_field :approved_on, :value => Time.now %>
    <% end %>
  <% end %>
  <div class="form-actions">
    Please note that your submission will not appear on SDFB <br>
    until it is reviewed by a SDFB curator or administrator. <br>
    <%= f.button :submit, :class => 'btn btn-primary', :value => "Edit Group Category Assignment" %>
  </div>
<% end %>