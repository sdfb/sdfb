<html>
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
	<%= javascript_include_tag "display2" %>


</head>

<body>
	<script >
		window.gon = <%= @data.to_json.html_safe %>
	</script>
	<div id="everything">
	<div id="filterBar">
		<ul>
			<li id="results"></li>
		</ul>
		<ul>
			<li>Filter By: &nbsp;</li>
			<li><a id="certainty-anchor">Certainty&nbsp;</a></li>
			<li><a id="date-anchor">Date&nbsp;</a></li>
			<li><a class="talkPageLink" type="button" id="nav-filter" name="nav-node">Filter</a></li>
		</ul>
		<div id="nav-certainty-slider" class="nav-hover">
			<span id="slidenav" ><article id="nav-slider" class="slider" name="1"></article></span>
			<article class="slider-result" id="slidenav-result1">Possible Relationships @ 40%</article>
			<input id="slidenav-result-hidden1" type="hidden" value="40"/>
		</div>
		<div id="nav-date" class="nav-hover">
			<label for="nav-date-range">Date Range:</label><input type="text" id="nav-date-range2">
			<span id="slidenav2" ><article id="navslider2"class="slider-date" name="2"></article></span>
		</div>
	</div>



 	 
	<div id="graph"></div>
	<div id="zoom">
		<button class="icon icon-zoomin" name="in"></button>
		<button class="icon icon-zoomout" name="out"></button>	
		<button class="icon icon-color"></button>
		<button class="icon icon-info"></button>
	</div>
	<div id="twogroupsmenu">
		<button type="button" class="btn btn-primary" id="group1" ></button>
		<button type="button" class="btn btn-primary active" id="group2" >Intersection</button>
		<button type="button" class="btn btn-primary" id="group3" ></button>
	</div>

	<div id="guide">
		<p> Node Color By Birth Year: </p>
		<div class="icon" id="cancel"></div>
		<img id="guide-pic" src="assets/coloryearlegend.png" alt="Color Legend">
	</div>

	<aside>
		<div id="accordion">
			<!-- search bar -->
			<h3 class="accordion_btn on"><span class="icon-magnify"></span>Search</h3>
			<div class="accordion_content active" id="search">
				<ul class="search-table">
					<li id="onenode" class="clicked btnl">Network</li>		
					<li id="twonode" class="btnl">Shared network</li>
					<li id="onegroup" class="btnl" onclick="$('#tab-group').click();">Group</li>
					<li id="twogroup" class="btnl">Shared groups</li>
				</ul>

				<!-- NODE FORMS -->

				<section id="onenodeform">
					<!-- Testing the new autocomplete -->
					<input class="form-control" type="text" id="one" placeholder="Name" data-autocomplete="home/autocomplete_person_search_names_all" data-id-element="#one_node_id_field"> 
					<input id="one_node_id_field" type="hidden" />


					<label for="search-date-range">Confidence Level:</label>
					<span id="slide1" ><article id="node-slider" class="slider" name="1"></article></span>
					<article class="slider-result" id="slider-result1">Possible Relationships @ 40%</article>
					<input id="slider-result-hidden1" type="hidden" value="40"/>

					<label for="search-date-range">Date Range:</label>
					<span id="slide2" ><article class="slider-date" name="2"></article></span>
					<article class="slider-result" id="search-date-range1">Date Range: 1400 - 1600</article>
					<input id="search-date-hidden1" type="hidden" value="1400 - 1600"/>

					<input type="checkbox" name="show-table" value="show-table" id="show-table">Show Table</input>
					<a class="talkPageLink" type="button" id="findonenode" name="node">Find</a>
				</section>

				<section id="twonodeform">
					<input class="form-control" type="text" id="two" placeholder="Name 1"><br>
					<input class="form-control" type="text" id="three" placeholder="Name 2"><br>
					<label for="search-date-range">Confidence Level:</label>
					<span id="slide3" ><article id="edge-slider" class="slider" name="2"></article></span>
					<article class="slider-result" id="slideredge-result1">Possible Relationships @ 40%</article>
					<input id="slideredge-result-hidden2" type="hidden" value="40"/>

					<label for="searchedge-date-range2">Date Range:</label>
					<span id="slide4" ><article class="slider-date2" name="3"></article></span>
					<article class="slider-result" id="searchedge-date-range2">Date Range: 1400 - 1600</article>
					<input id="searchedge-date-hidden2" type="hidden" value="1400 - 1600"/>

					<input type="checkbox" id="check-shared" value="table">Show table<br>
					<a class="talkPageLink" type="button" id="findtwonode" name="node">Find</a>
				</section>

			<!-- GROUP FORMS -->

				<section id="twogroupform">
					<input 	class="form-control" type="text" id="five" placeholder="Group 1"><br>
					<input 	class="form-control" type="text" id="six" placeholder="Group 2"><br>
					<button class="talkPageLink" type="button" id="findtwogroup" name="group">Find</button>
				</section>
			</div>



			<!-- person information bar -->
			<h3 class="accordion_btn"><span class="icon-node"></span>Person</h3>
			<div  class="accordion_content " id="nodeinfo">
				<a class="icon icon-annotate" id="node-icon-annotate"  name="group"></a>
				<a class="icon icon-chain" id="node-icon-chain" name="edge"></a>
				<p id="node-name" class="node-name"></p>
				<b>BIRTH DATE&nbsp;</b> 				<a id="node-bdate"></a><br>
				<b>DEATH DATE&nbsp;</b> 				<a id="node-ddate"></a><br>
				<b>HISTORICAL SIGNIFICANCE</b><br>		<a id="node-significance"></a><br>
				<b>GROUPS&nbsp;</b>						<a id="node-group"></a><br>
				<!--<b>CITATION</b><br>						<a id="node-cite"></a><br>-->
				<b>LINKS&nbsp;</b>
				<a id="node-DNBlink" target="_blank">Oxford DNB</a> &nbsp;
				<a id="node-GoogleLink" target="_blank">Google</a> <br><br>
				<a id="node-discussion" class="talkPageLink" target="_blank">View Entry History</a>
			</div>

			<!-- relationship information bar -->
			<h3 class="accordion_btn"><span class="icon-edge"></span>Relationship</h3>
			<div  class="accordion_content " id="edgeinfo">
				<a class="icon icon-annotate" id="edge-icon-annotate" name="edge"></a>
				<p id="edge-nodes"></p>
				<b>CONFIDENCE&nbsp;</b> 	<span id="edge-confidence"></span><br>
				<b>DATE RANGE&nbsp;</b> 	<span id="edge-daterange"></span><br>
				<span id="relationship-table">
					<b class="relationship-type relationship-cell">Type</b>
					<b class="relationship-from relationship-cell">From</b>
					<b class="relationship-to relationship-cell">To</b>
					<b class="relationship-confidence relationship-cell">Confidence</b>
				</span>
				<a class="talkPageLink" target="_blank" id="edge-discussion">View Entry History</a>
				<!--<b>CONTRIBUTORS: &nbsp;</b> 	<a id="edge-contributor"></a><br>--><br>
			</a>
			</div>

			<!-- group information bar -->
			<h3 class="accordion_btn" id="tab-group"><span class="icon-node"></span>Group</h3>
			<div  class="accordion_content " id="groupinfo">
				<a class="icon icon-label" id="group-icon-label" href="/group_assignments/new" name="edge"></a>
				<a class="icon icon-annotate" id="group-icon-annotate" name="edge"></a>
				<input type="text" id="group_name" placeholder="Group">
				<p id="edge-nodes"></p>
				<b>DESCRIPTION&nbsp;</b> 	<span id="group-description"></span><br>
				<b>MEMBERS&nbsp;</b> 	<span id="group-members"></span><br>
				<a class="talkPageLink" target="_blank">View Entry History</a>
			</div>

			<!-- contribution bar -->
			<h3 class="accordion_btn"><span class="icon-add"></span>Contribute</h3>
			<div  class="accordion_content tabs" id="add">
				<ul class="clearfix">
					<a href="/people/new"><li id="addnode">Person</li></a>
					<a href="/relationships/new"><li id="addedge">Relationship</li></a>
					<a href="/groups/new"><li id="addgroup">Group</li></a>
				</ul>
			</div>


		</div>
	</aside>		
	
	</div>
</body>
</html>
