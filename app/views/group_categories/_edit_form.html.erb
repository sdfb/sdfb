<%= simple_form_for @group_category, :html => { :class => 'form-horizontal' } do |f| %>
  <% if @group_category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@group_category.errors.count, "error") %> prohibited this group_category from being saved:</h2>

      <ul>
      <% @group_category.errors.full_messages.each do |msg| %>
        <br>
          <li>- <%= msg %></li>
        <br>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.input :name %>
  <%= f.input :description %>
  <% if current_user.user_type == "Admin" %>
    <%= f.input :is_approved %>
    <% if @is_approved == false %>
      <%= f.hidden_field :approved_by, :value => current_user.id %>
      <%= f.hidden_field :approved_on, :value => Time.now %>
    <% end %>
  <% end %>
  <%= f.hidden_field :edited_by_on, :value => current_user.id %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
  </div>
<% end %>