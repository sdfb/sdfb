<div class="row">
  <div class="span12">
    <h1>Relationship Type/Category Assignment</h1>
  </div>
</div>
<br>
<div class="row">
  <div class="span5">
    <div class="well">
      <h2>Information
        <% if can? :update, @rel_cat_assign %> 
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                  edit_rel_cat_assign_path(@rel_cat_assign), :class => 'btn btn-mini' %>
        <% end %>
      </h2>
      <br>
      <dl class="dl-horizontal">
        <dt><strong>SDFB Rel. Type Assign. ID:</strong></dt>
        <dd><%= @rel_cat_assign.id %></dd>
        <dt><strong>Relationship Type:</strong></dt>
        <dd><%= link_to RelationshipType.find(@rel_cat_assign.relationship_type_id).name, relationship_type_path(@rel_cat_assign.relationship_type_id) %></dd>
        <dt><strong>Relationship Category:</strong></dt>
        <dd><%= link_to RelationshipCategory.find(@rel_cat_assign.relationship_category_id).name, relationship_category_path(@rel_cat_assign.relationship_category_id) %></dd>
        <dt><strong>Created By:</strong></dt>
        <dd><%= link_to User.find(@rel_cat_assign.created_by).username,  user_path(@rel_cat_assign.created_by) %></dd>
        <% if (! current_user.blank?) && ((current_user.user_type == "Admin")) %>
          <% if (! current_user.blank?) && ((current_user.user_type == "Admin")) %>
            <dt><strong>Is Approved?:</strong></dt>
            <dd><%= @rel_cat_assign.is_approved %></dd>
            <% if ! @rel_cat_assign.approved_by.blank? %>
              <dt><strong>Approved By:</strong></dt>
              <dd><%= link_to User.find(@rel_cat_assign.approved_by).username,  user_path(@rel_cat_assign.approved_by) %></dd>
            <% end %>
            <% if ! @rel_cat_assign.approved_on.blank? %>
              <dt><strong>Approved On:</strong></dt>
              <dd><%= @rel_cat_assign.approved_on %></dd>
            <% end %>
            <dt><strong>Created On:</strong></dt>
            <dd><%= @rel_cat_assign.created_at %></dd>
            <dt><strong>Edit History:</strong></dt>
            <% if ! @rel_cat_assign.edited_by_on.blank? %>
              <dd><%= @rel_cat_assign.edited_by_on %></dd>
            <% else %>
              <dd>No edits have been made.</dd>
            <% end %>
          <% end %>    
          <dt><strong>Is Active:</strong></dt>
          <dd><%= @rel_cat_assign.is_active %></dd>
          <dt><strong>Is Rejected:</strong></dt>
          <dd><%= @rel_cat_assign.is_rejected %></dd>
        <% end %>
      </dl>
    </div>
  </div>
