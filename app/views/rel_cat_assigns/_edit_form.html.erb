<%= simple_form_for @rel_cat_assign, :html => { :class => 'form-horizontal' } do |f| %>
  <% if @rel_cat_assign.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@rel_cat_assign.errors.count, "error") %> prohibited this relationship category assignment from being saved:</h2>

      <ul>
      <% @rel_cat_assign.errors.full_messages.each do |msg| %>
        <br>
          <li>- <%= msg %></li>
        <br>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if ! @rel_type_id.blank? %>
    <%= f.input :relationship_type_id, :collection =>@relTypeOptions.collect{ |g| [g.name, g.id] }, label: "Relationship Type", prompt: "Select", selected: @rel_type_id %>
  <% else %>
    <%= f.input :relationship_type_id, :collection =>@relTypeOptions.collect{ |g| [g.name, g.id] }, label: "Relationship Type", prompt: "Select" %>
  <% end %>
  <% if ! @rel_cat_id.blank? %>
    <%= f.input :relationship_category_id, :collection =>@relCatOptions.collect{ |g| [g.name, g.id] }, label: "Relationship Category", prompt: "Select", selected: @rel_cat_id %>
  <% else %>
    <%= f.input :relationship_category_id, :collection =>@relCatOptions.collect{ |g| [g.name, g.id] }, label: "Relationship Category", prompt: "Select" %>
  <% end %>
  <% if current_user.user_type == "Admin" %>
    <%= f.input :is_approved %>
    <%= f.input :is_active %>
    <% if @is_approved == false %>
      <%= f.input :is_rejected %>
      <%= f.hidden_field :approved_by, :value => current_user.id %>
      <%= f.hidden_field :approved_on, :value => Time.now %>
    <% end %>
  <% end %>
  <%= f.hidden_field :edited_by_on, :value => current_user.id %>
  <div class="form-actions">
    Please note that your submission will not appear on SDFB <br>
    until it is reviewed by a SDFB curator or administrator. <br>
    <%= f.button :submit, :class => 'btn btn-primary', :value => "Edit Relationship Type/Category Assignment" %>
  </div>
<% end %>