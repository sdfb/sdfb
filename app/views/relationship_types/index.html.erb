<h1>All Relationship Types <%= link_to 'New Relationship type', new_relationship_type_path, :class => 'btn btn-primary' %></h1><br>

<table class="table table-condensed">
    <tr>
    <th>Relationship Type id</th>
    <th>Name</th>
    <th>Inverse</th>
    <th></th>
    </tr>

    <% @relationship_types.each do |relationship_type| %>
      <tr>
        <td><%= relationship_type.id %></td>
        <td><%= relationship_type.name %></td>
        <td><%= relationship_type.relationship_type_inverse %></td>
        <td><%= link_to 'Show', relationship_type, :class => 'btn btn-mini' %>
        <%= link_to 'Edit', edit_relationship_type_path(relationship_type), :class => 'btn btn-mini' %></td>
      </tr>
    <% end %>
</table>

<br />
