<%- model_class = GroupAssignment -%>

<h1>All Group Assignments<%= link_to 'Assign a Person to a Group',
            new_group_assignment_path,
            :class => 'btn btn-primary' %><%=link_to 'Export Data', '/export_group_assignments', :class => 'btn btn-primary'%></h1><br>

<table class="table table-condensed">
  <thead>
  <tr>
    <th>SDFB Group Assignment ID</th>
    <th>Group</th>
    <th>Person</th>
    <th>Start Date Type</th>
    <th>Start Date</th>
    <th>End Date Type</th>
    <th>End Date</th>
    <th><%=t '.actions', :default => t("helpers.actions") %></th>
  </tr>
  </thead>
  <tbody>
    <% @group_assignments_approved.each do |group_assignment| %>
      <tr>
        <td><%= group_assignment.id %></td>
        <td><%= link_to group_assignment.get_group_name, group_path(group_assignment.group_id) %></td>
        <td><%= link_to group_assignment.get_person_name, person_path(group_assignment.person_id) %></td>
        <td>
          <% if group_assignment.start_date_type == "BF" %>
            Before
          <% elsif group_assignment.start_date_type == "AF" %>
            After
          <% elsif group_assignment.start_date_type == "IN" %>
            In
          <% elsif group_assignment.start_date_type == "CA" %>
            Circa
          <% elsif group_assignment.start_date_type == "BF/IN" %>
            Before or In
          <% elsif group_assignment.start_date_type == "AF/IN" %>
            After or In
          <% end %>
        </td>
        <td>
          <% if ((! group_assignment.start_month.blank?) || (! group_assignment.start_day.blank?) || (! group_assignment.start_year.blank?)) %>
            <% if ! group_assignment.start_month.blank? %>
              <%= group_assignment.start_month %>
            <% end %>  
            <% if ! group_assignment.start_day.blank? %>
              <%= group_assignment.start_day %>,
            <% end %>
            <% if ! group_assignment.start_year.blank? %>
              <%= group_assignment.start_year %>
            <% end %>
          <% end %>
        </td>
        <td>
          <% if group_assignment.end_date_type == "BF" %>
            Before
          <% elsif group_assignment.end_date_type == "AF" %>
            After
          <% elsif group_assignment.end_date_type == "IN" %>
            In
          <% elsif group_assignment.end_date_type == "CA" %>
            Circa
          <% elsif group_assignment.end_date_type == "BF/IN" %>
            Before or In
          <% elsif group_assignment.end_date_type == "AF/IN" %>
            After or In
          <% end %>
        </td>
        <td>
          <% if ((! group_assignment.end_month.blank?) || (! group_assignment.end_day.blank?) || (! group_assignment.end_year.blank?)) %>
            <% if ! group_assignment.end_month.blank? %>
              <%= group_assignment.end_month %>
            <% end %>  
            <% if ! group_assignment.end_day.blank? %>
              <%= group_assignment.end_day %>,
            <% end %>
            <% if ! group_assignment.end_year.blank? %>
              <%= group_assignment.end_year %>
            <% end %>
          <% end %>
        </td>
        <td>
          <% if can? :show, group_assignment %>
            <%= link_to 'Show', group_assignment, :class => 'btn btn-mini' %>
          <% end %>
          <% if can? :update, group_assignment %>
            <%= link_to 'Edit', edit_group_assignment_path(group_assignment), :class => 'btn btn-mini' %>
          <% end %>
          <% if can? :delete, group_assignment %>
            <%= link_to 'Destroy', group_assignment, :class => 'btn btn-mini btn-danger',method: :delete, data: { confirm: 'Are you sure that you want to permanently delete this record and all associated records?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @group_assignments_approved, :param_name => 'group_assignments_page', :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
