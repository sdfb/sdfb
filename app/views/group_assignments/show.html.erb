<%- model_class = GroupAssignment -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt>Group Assignment id</dt>
  <dd><%= @group_assignment.id %></dd>
  <dt>Created by:</dt>
  <dd><%= link_to User.find(@group_assignment.created_by).username,  user_path(@group_assignment.created_by) %></dd>
  <dt>Group:</dt>
  <dd><%= link_to Group.find(@group_assignment.group_id).name,  group_path(@group_assignment.group_id) %></dd>
  <dt>Person:</dt>
  <dd><%= link_to Person.find(@group_assignment.person_id).first_name + " " + Person.find(@group_assignment.person_id).last_name,  person_path(@group_assignment.person_id) %></dd>
  <dt>Start date</dt>
  <dd><%= @group_assignment.start_date %></dd>
  <dt>End date</dt>
  <dd><%= @group_assignment.end_date %></dd>
  <dt>Created at</dt>
  <dd><%= @group_assignment.created_at %></dd>
  <% if ! @group_assignment.approved_by.blank? %>
    <dt>Approved by</dt>
    <dd><%= link_to User.find(@group_assignment.approved_by).username,  user_path(@group_assignment.approved_by) %></dd>
    <dt>Approved on</dt>
    <dd><%= @group_assignment.approved_on%></dd>
  <% end %>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              group_assignments_path, :class => 'btn'  %>
  <% if can? :update, @group_assignment %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_group_assignment_path(@group_assignment), :class => 'btn' %>
  <% end %>
</div>
