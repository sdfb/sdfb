<%- model_class = GroupAssignment -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<p id="notice"><%= notice %></p>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:created_by) %>:</strong></dt>
  <dd><%= @group_assignment.created_by %></dd>
  <dt><strong><%= model_class.human_attribute_name(:group_id) %>:</strong></dt>
  <dd><%= @group_assignment.group_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:person_id) %>:</strong></dt>
  <dd><%= @group_assignment.person_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:is_approved) %>:</strong></dt>
  <dd><%= @group_assignment.is_approved %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              group_assignments_path, :class => 'btn'  %>
  <% if can? :update, @group_assignment %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_group_assignment_path(@group_assignment), :class => 'btn' %>
  <% end %>
  <% if can? :destroy, @group_assignment %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              group_assignment_path(@group_assignment),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
  <% end %>
</div>
