<div class="row">
  <div class="span12">
    <h1>Group Assignment
    </h1>
  </div>
</div>
<br>
<div class="row">
  <div class="span5">
    <div class="well">
      <h2>Information
        <% if can? :update, @group_assignment %> 
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                  edit_group_assignment_path(@group_assignment), :class => 'btn btn-mini' %>
        <% end %>
        <% if can? :delete, @group_assignment %>
          <%= link_to 'Destroy', @group_assignment, :class => 'btn btn-mini btn-danger',method: :delete, data: { confirm: 'Are you sure that you want to permanently delete this record and all associated records?' } %>
        <% end %>
      </h2>
      <br>
      <dl class="dl-horizontal">
        <dt><strong>SDFB Group Assign. ID:</strong></dt>
        <dd><%= @group_assignment.id %></dd>
        <dt><strong>Group:</strong></dt>
        <dd><%= link_to Group.find(@group_assignment.group_id).name,  group_path(@group_assignment.group_id) %></dd>
        <dt><strong>Person:</strong></dt>
        <dd><%= link_to Person.find(@group_assignment.person_id).first_name + " " + Person.find(@group_assignment.person_id).last_name,  person_path(@group_assignment.person_id) %></dd>

        <dt><strong>Start Date Type:</strong></dt>
        <% if ! @group_assignment.start_date_type.blank? %>
          <dd>
            <% if @group_assignment.start_date_type == "BF" %>
              <dd>Before</dd>
            <% elsif @group_assignment.start_date_type == "AF" %>
              <dd>After</dd>
            <% elsif @group_assignment.start_date_type == "IN" %>
              <dd>In</dd>
            <% elsif @group_assignment.start_date_type == "CA" %>
              <dd>Circa</dd>
            <% elsif @group_assignment.start_date_type == "BF/IN" %>
              <dd>Before or In</dd>
            <% elsif @group_assignment.start_date_type == "AF/IN" %>
              <dd>After or In</dd>
            <% end %>
          </dd>
        <% else %>
          <dd>Unknown</dd>
        <% end %>

        <dt><strong>Start Date:</strong></dt>
        <% if ((! @group_assignment.start_month.blank?) || (! @group_assignment.start_day.blank?) || (! @group_assignment.start_year.blank?)) %> 
          <dd>
            <% if ! @group_assignment.start_month.blank? %>
              <%= @group_assignment.start_month %>
            <% end %>  
            <% if ! @group_assignment.start_day.blank? %>
              <%= @group_assignment.start_day %>,
            <% end %>
            <% if ! @group_assignment.start_year.blank? %>
              <%= @group_assignment.start_year %>
            <% end %>
          </dd>
        <% else %>
          <dd>Unknown</dd>
        <% end %>

        <dt><strong>End Date Type:</strong></dt>
        <% if ! @group_assignment.end_date_type.blank? %>
          <dd>
            <% if @group_assignment.end_date_type == "BF" %>
              <dd>Before</dd>
            <% elsif @group_assignment.end_date_type == "AF" %>
              <dd>After</dd>
            <% elsif @group_assignment.end_date_type == "IN" %>
              <dd>In</dd>
            <% elsif @group_assignment.end_date_type == "CA" %>
              <dd>Circa</dd>
            <% elsif @group_assignment.end_date_type == "BF/IN" %>
              <dd>Before or In</dd>
            <% elsif @group_assignment.end_date_type == "AF/IN" %>
              <dd>After or In</dd>
            <% end %>
          </dd>
        <% else %>
          <dd>Unknown</dd>
        <% end %>

        <dt><strong>End Date:</strong></dt>
        <% if ((! @group_assignment.end_month.blank?) || (! @group_assignment.end_day.blank?) || (! @group_assignment.end_year.blank?)) %>
            <dd>
              <% if ! @group_assignment.end_month.blank? %>
                <%= @group_assignment.end_month %>
              <% end %>  
              <% if ! @group_assignment.end_day.blank? %>
                <%= @group_assignment.end_day %>,
              <% end %>
              <% if ! @group_assignment.end_year.blank? %>
                <%= @group_assignment.end_year %>
              <% end %>
            </dd>
        <% else %>
          <dd>Unknown</dd>
        <% end %>

        <% if (! current_user.blank?) && (current_user.user_type == "Admin") %>
          <dt><strong>Created:</strong></dt>
          <dd><%= @group_assignment.created_at.strftime("%m/%d/%Y") %> by <%= link_to User.find(@group_assignment.created_by).username,  user_path(@group_assignment.created_by) %></dd>
          <% @last_edit = @group_assignment.last_edit %>
          <% if ! @last_edit.blank? %>
            <dt><strong>Last Edit:</strong></dt>
            <dd><%= @last_edit[1].strftime("%m/%d/%Y")%> by <%= link_to User.find(@last_edit[0]).username,  user_path(@last_edit[0]) %></dd>
          <% end %>
          <% if ! @group_assignment.approved_by.blank? %>
            <dt><strong>Approved By:</strong></dt>
            <dd><%= link_to User.find(@group_assignment.approved_by).username,  user_path(@group_assignment.approved_by) %></dd>
            <dt><strong>Approved On:</strong></dt>
            <dd><%= @group_assignment.approved_on%></dd>
          <% end %>
          <dt><strong>Is Active:</strong></dt>
          <dd><%= @group_assignment.is_active %></dd>
          <dt><strong>Is Rejected:</strong></dt>
          <dd><%= @group_assignment.is_rejected %></dd>
        <% end %>
      </dl>
    </div>
  </div>
</div>


