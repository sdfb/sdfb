<p id="notice"><%= notice %></p>

<%- model_class = UserRelContrib -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>User Relationship Contribution id:</strong></dt>
  <dd><%= @user_rel_contrib.id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:relationship_id) %>:</strong></dt>
  <dd><%= @user_rel_contrib.relationship_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:created_by) %>:</strong></dt>
  <dd><%= @user_rel_contrib.created_by %></dd>
  <dt><strong><%= model_class.human_attribute_name(:confidence_type) %>:</strong></dt>
  <dd><%= @user_rel_contrib.confidence_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:annotation) %>:</strong></dt>
  <dd><%= @user_rel_contrib.annotation %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bibliography) %>:</strong></dt>
  <dd><%= @user_rel_contrib.bibliography %></dd>
  <dt><strong><%= model_class.human_attribute_name(:relationship_type) %>:</strong></dt>
  <dd><%= @user_rel_contrib.relationship_type %></dd>
  <dt><strong>Edited by on:</strong></dt>
  <dd><%= @user_rel_contrib.edited_by_on %></dd>
  <dt><strong>Reviewed by on:</strong></dt>
  <dd><%= @user_rel_contrib.reviewed_by_on %></dd>
  <dt><strong>Created at:</strong></dt>
  <dd><%= @user_rel_contrib.created_at %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              user_rel_contribs_path, :class => 'btn'  %>

  <% if can? :update, @user_rel_contrib %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_user_rel_contrib_path(@user_rel_contrib), :class => 'btn' %>
  <% end %>

  <% if can? :destroy, @user_rel_contrib %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              user_rel_contrib_path(@user_rel_contrib),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
  <% end %>
</div>
