<%- model_class = UserRelContrib -%>
<div class="page-header">
  <h1>Relationship Type Assignment</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Id:</strong></dt>
  <dd><%= @user_rel_contrib.id %></dd>
  <dt><strong>Relationship:</strong></dt>
  <dd><%= link_to Relationship.find(@user_rel_contrib.relationship_id).get_person1_name + " & " + Relationship.find(@user_rel_contrib.relationship_id).get_person2_name ,  relationship_path(@user_rel_contrib.relationship_id) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:created_by) %>:</strong></dt>
  <dd><%= link_to User.find(@user_rel_contrib.created_by).username,  user_path(@user_rel_contrib.created_by) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:confidence) %>:</strong></dt>
  <dd><%= @user_rel_contrib.confidence %>%</dd>
  <dt><strong><%= model_class.human_attribute_name(:annotation) %>:</strong></dt>
  <dd><%= @user_rel_contrib.annotation %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bibliography) %>:</strong></dt>
  <dd><%= @user_rel_contrib.bibliography %></dd>
  <dt><strong>Relationship Type:</strong></dt>
  <dd><%= link_to RelationshipType.find(@user_rel_contrib.relationship_type).name, relationship_type_path(@user_rel_contrib.relationship_type) %></dd>
  <dt><strong>Created at:</strong></dt>
  <dd><%= @user_rel_contrib.created_at %></dd>
    <dt><strong>Is Approved?:</strong></dt>
  <dd><%= @user_rel_contrib.is_approved %></dd>
  <% if ! @user_rel_contrib.approved_by.blank? %>
    <dt><strong>Approved by:</strong></dt>
    <dd><%= link_to User.find(@user_rel_contrib.approved_by).username,  user_path(@user_rel_contrib.approved_by) %></dd>
  <% end %>
  <% if ! @user_rel_contrib.approved_by.blank? %>
    <dt><strong>Approved on:</strong></dt>
    <dd><%= @user_rel_contrib.approved_on %></dd>
  <% end %>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              user_rel_contribs_path, :class => 'btn'  %>

  <% if can? :update, @user_rel_contrib %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_user_rel_contrib_path(@user_rel_contrib), :class => 'btn' %>
  <% end %>
</div>
