<h1>All User Relationship Contributions</h1><br>

<div class="well">
  <div class="container">
    <div class="row">
      <div class="span8">
        <b>Add a new user relationship contribution</b></br>
        <%= link_to 'New User Relationship Contribution',
            new_user_rel_contrib_path,
            :class => 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>User Relationship Contribution id</th>
      <th>Relationship</th>
      <th>Created by</th>
      <th>Confidence</th>
      <th>Annotation</th>
      <th>Bibliography</th>
      <th>Relationship type</th>
      <th>Created at</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @user_rel_contribs.each do |user_rel_contrib| %>
      <tr>
        <td><%= user_rel_contrib.id %></td>
        <td><%= link_to user_rel_contrib.get_both_names, relationship_path(user_rel_contrib.relationship_id) %></td>
        <td><%= link_to user_rel_contrib.get_users_name, user_path(user_rel_contrib.created_by) %></td>
        <td><%= user_rel_contrib.confidence %></td>
        <td><%= user_rel_contrib.annotation %></td>
        <td><%= user_rel_contrib.bibliography %></td>
        <td><%= user_rel_contrib.relationship_type %></td>
        <td><%= user_rel_contrib.created_at %></td>
        <td>
          <% if can? :show, user_rel_contrib %>
            <%= link_to 'Show', user_rel_contrib %>
          <% end %>
          <% if can? :update, user_rel_contrib %>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_user_rel_contrib_path(user_rel_contrib), :class => 'btn btn-mini' %>
          <% end %>
          <% if can? :destroy, user_rel_contrib %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      user_rel_contrib_path(user_rel_contrib),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @user_rel_contribs, :param_name => 'user_rel_contribs_page', :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
