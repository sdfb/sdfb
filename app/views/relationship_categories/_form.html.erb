<%= simple_form_for @relationship_category, :html => { :class => 'form-horizontal' } do |f| %>
  <% if @relationship_category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@relationship_category.errors.count, "error") %> prohibited this relationship category from being saved:</h2>

      <ul>
      <% @relationship_category.errors.full_messages.each do |msg| %>
        <br>
          <li>- <%= msg %></li>
        <br>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.hidden_field :created_by, :value => current_user.id %>
  <%= f.input :name %>
  <%= f.input :description %>
  <% if current_user.user_type == "Admin" %>
    <%= f.input :is_approved %>
    <%= f.input :is_active %>
    <%= f.input :is_rejected %>
    <%= f.hidden_field :approved_by, :value => current_user.id %>
    <%= f.hidden_field :approved_on, :value => Time.now %>
  <% end %>
  <%= f.input :annotation, input_html: { rows:"5" }, label: "Justification" %>
  <%= f.input :bibliography, input_html: { rows:"5" }, label: "Citation" %>
  <div class="form-actions">
    Please note that your submission will not appear on SDFB <br>
    until it is reviewed by a SDFB administrator. <br>
    <%= f.button :submit, :class => 'btn btn-primary', :value => "Create Relationship Category" %>
  </div>
<% end %>