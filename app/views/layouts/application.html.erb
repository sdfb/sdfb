<!DOCTYPE html>
<html>
<head>
  <title>Sdfb</title>
  <%= include_gon %>

  <%= csrf_meta_tags %>
</head>
<body>

<!-- Nav Bar Header -->

	<div id="user_nav">
		<div id="logo"><%= image_tag "fb.png" %></div>
		<header>Six Degrees of Francis Bacon</header>

		<div id="sign">
		  <% if current_user %>
			Logged in as <%= current_user.email %>
			<%= link_to "Sign out", sign_out_path %>
		  <% else %>
			<%= link_to "Sign up", sign_up_path %> or 
			<%= link_to "Sign in", sign_in_path %>
		  <% end %>
		</div>
		<div class="links"><a href="help">Help</a></div>
		<div class="links"><a href="http://sixdegreesoffrancisbacon.com/">Blog</a></div>
		<div class="links"><a href="about">About</a></div>
	</div> 
  <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, :id => "flash#{name}" %>
  <% end %> 
<%= yield %> 



<!-- Home Page Content -->
<% if current_page? ('test') %>
	<div class="container">
		<div class="row">
			<% flash.each do |name, msg| %>
				<div class="alert alert-<%= name == :notice ? "success" : "error" %>">
					<a class="close" data-dismiss="alert">x</a>
					<%= msg %>
				</div>
			<% end %>
			<%= yield %>
		</div>
	</div>
<% end %>
<!-- Footer -->
<%= render :partial => 'layouts/footer'%>

</body>
</html>
