<%= simple_form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <br>
          <li>- <%= msg %></li>
        <br>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.input :first_name, label: "First Name" %>
  <%= f.input :last_name, label: "Last Name" %>
  <%= f.input :username %>
  <%= f.input :email %>
  <%= f.input :password, hint: "Your password must include at least one number, at least one letter, and at least 7 characters." %>
  <%= f.input :password_confirmation %>
  <%= f.input :orcid, label: "ORCID"  %>
  <%= f.input :affiliation %>
  <%= f.input :about_description, label: "About Description" %>
  <%= f.hidden_field :curator_revoked, :value => false %>
  <% if current_user != nil %>
    <% if (current_user.user_type == "Admin") %>
      <%= f.input :user_type, :collection => ["Standard", "Curator","Admin"], prompt: "Select" %>
      <div class="field">
        <%= f.label :is_active %>
        <%= f.check_box :is_active %>
      </div>
    <% end %>
  <% end %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary', :value => "Edit User" %>
  </div>
<% end %>