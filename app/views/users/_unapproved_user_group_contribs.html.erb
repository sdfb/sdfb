<h2>Unapproved Group Notes</h2>

<% if ! @unapproved_user_group_contribs.empty? %>
  <div class = "well">
    <table class="table table-condensed">
      <thead>
        <tr>
          <th>SDFB Group Note ID</th>
          <th>Group</th>
          <th>Note</th>
          <th>Citation</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @unapproved_user_group_contribs.each do |user_group_contrib| %>
          <tr>
            <td><%= link_to user_group_contrib.id, user_group_contrib %></td>
            <td><%= link_to Group.find(user_group_contrib.group_id).name, group_path(user_group_contrib.group_id) %></td>
            <td><%= user_group_contrib.annotation %></td>
            <td><%= user_group_contrib.bibliography %></td>
            <td>
              <% if can? :update, user_group_contrib %>
                  <%= link_to t('.edit', :default => t("helpers.links.edit")),
                            edit_user_group_contrib_path(user_group_contrib), :class => 'btn btn-mini' %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= will_paginate @unapproved_user_group_contribs, :param_name => 'unapproved_user_group_contribs_page', :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
  </div>
<% else %>
  <div class = "well">
    No approved group notes exist.
  </div>
<% end %>
