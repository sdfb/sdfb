<h2>Groups</h2>
<div class = "well">
  <% if ! @new_groups.empty? %>
    <table class="table table-condensed">
      <thead>
        <tr>
          <th>SDFB Group ID</th>
          <th>Name</th>
          <th>Description</th>
          <th>Start Year</th>
          <th>End Year</th>
          <th>Status</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @new_groups.each do |group| %>
          <tr>
            <td><%= link_to group.id, group %></td>
            <td><%= group.name %></td>
            <td><%= group.description %></td>
            <td><%= group.start_year %></td>
            <td><%= group.end_year %></td>
            <td>
              <% if (group.is_active == true) %>
                <% if ((group.is_approved == true) && (group.is_rejected == false)) %>
                  Approved
                <% elsif ((group.is_approved == false) && (group.is_rejected == false)) %>
                  Pending
                <% elsif ((group.is_approved == false) && (group.is_rejected == true)) %>
                  Rejected
                <% elsif ((group.is_approved == true) && (group.is_rejected == true)) %>
                  Rejected
                <% end %>
              <% else %>
                Inactive
              <% end %>
            </td>
            <td>
              <% if can? :update, group %>
                <%= link_to t('.edit', :default => t("helpers.links.edit")),
                                edit_group_path(group), :class => 'btn btn-mini' %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= will_paginate @new_groups, :param_name => 'groups_page', :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
  <% else %>
    You have not contributed any groups.
  <% end %>
</div>